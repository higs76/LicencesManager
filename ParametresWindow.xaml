<Window x:Class="LicencesManager.ParametresWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"        
        xmlns:local="clr-namespace:LicencesManager"
        mc:Ignorable="d"
        Title="Configuration" Height="450" Width="800">
    <Grid Margin="10">
        <StackPanel>
            <TextBlock Text="Chemin du dossier de sauvegarde:" Margin="0,0,0,10" />
            <TextBox Name="CheminTextBox" Margin="0,0,0,10" IsReadOnly="True" />
            <Button Content="Changer le Dossier" Click="ChangerDossier_Click" Margin="0,10,0,0" />
            <Button Content="Enregistrer" Click="Enregistrer_Click" Margin="0,10,0,0" />
        </StackPanel>
    </Grid>
</Window>
