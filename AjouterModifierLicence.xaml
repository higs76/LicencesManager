<Window x:Class="LicencesManager.AjouterModifierLicence"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:LicencesManager"
        mc:Ignorable="d"
        Title="AjouterModifierLicence" Height="450" Width="800">
    <Grid Margin="10">
        <StackPanel>
            <TextBlock Text="Nom:" />
            <TextBox Name="NomTextBox" Margin="0,0,0,10" />
            <TextBlock Text="Clé:" />
            <TextBox Name="CleTextBox" Margin="0,0,0,10" />
            <TextBlock Text="Date d'Expiration:" />
            <DatePicker Name="DateExpirationPicker" Margin="0,0,0,10" />
            <TextBlock Text="Observation:" />
            <TextBox Name="ObservationTextBox" Margin="0,0,0,10" Height="100" TextWrapping="Wrap" VerticalScrollBarVisibility="Auto" />
            <Button Content="Enregistrer" Click="Enregistrer_Click" Margin="0,10,0,0" />
        </StackPanel>
    </Grid>
</Window>
